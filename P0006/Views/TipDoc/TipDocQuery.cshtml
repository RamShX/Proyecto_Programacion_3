@model List<P0006.Models.ViewModels.TipoDoc.TipDocQuerryViewModels>
@{
    ViewBag.Title = "Consulta Tipo Documento";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<h2>Consulta Tipo Documento</h2>
<br />
<br />
<br />

<div class="row">
    <br />
    <div class="col-md-12">
        <input type="button"
               value="Nuevo"
               class="btn btn-primary btn-lg"
               onclick="document.href='@Url.Content("~/TipDoc/AddTipDoc")'" />

        <input type="button"
               value="Volver atras"
               class="btn btn-info btn-lg"
               onclick="document.href='@Url.Content("~/")'" />
    </div>

    <br />
    <br />
    <br />
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th style="background-color: aquamarine; color: white">ID</th>
                <th style="background-color: aquamarine; color: white">Tipo</th>
                <th style="background-color: aquamarine; color: white">Descripción</th>
                <th style="background-color: aquamarine; color: white">Origen</th>
                <th style="background-color: aquamarine; color: white">Acción</th>
            </tr>

            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.ID</td>
                    <td>@obj.TIPDOC</td>
                    <td>@obj.DESCRIPCION</td>
                    <td>@obj.ORIGEN</td>
                    <td>
                        <input type="button"
                               class="btn btn-danger btn-lg"
                               onclick="jsDelete(@obj.ID)"
                               value="Borrar" />

                        <input type="button"
                               class="btn btn-default btn-lg"
                               onclick="document.location.href = '@Url.Content("~/TipDoc/EditTipDoc" + obj.ID)'"
                               value="Editar" />
                    </td>
                </tr>
            }
        </table>
    </div>

</div>

<script>
    function jsDelete(ID) {
        if (confirm("Estás seguro de borrar?")) {
            url = "@Url.Content("~/TipoDoc/DeleteTipDoc")" + "/" + ID

            $.post(url, function (data) {
                if (data == "1")
                {
                    document.location.href = "@Url.Content("~/TipoDoc/TipDocQuery")"
                } else {
                    alert("Registro no fue borrado :)");
                }
            })
        }

    }
</script>