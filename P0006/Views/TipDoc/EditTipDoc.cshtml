@model  P0006.Models.ViewModels.TipoDoc.EditTipDocViewModels
@{
    ViewBag.Title = "Editar Tipo Documento";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<h2>Editar Tipo Documento</h2>

<div class="col-md-12">
    <br />
    <br />
    <br />
    <div>
        @using (Html.BeginForm("EditTipDoc", "TipDoc", FormMethod.Post, new { role = "form", @class = "" }))
        {

            @Html.HiddenFor(t => t.Id) // Ocultar el campo Id para que se envíe al servidor

            @Html.LabelFor(l => l.TIPDOC)
            @Html.TextBoxFor(t => t.TIPDOC, new { @class = "form-control" })
            @Html.ValidationMessage("TIPDOC", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(l => l.DESCRIPCION)
            @Html.TextBoxFor(t => t.DESCRIPCION, new { @class = "form-control" })
            @Html.ValidationMessage("DESCRIPCION", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(l => l.ORIGEN)
            @Html.TextBoxFor(t => t.ORIGEN, new { @class = "form-control" })
            @Html.ValidationMessage("ORIGEN", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(l => l.CtaDebito)
            @Html.TextBoxFor(t => t.CtaDebito, new { @class = "form-control" })
            @Html.ValidationMessage("CtaDebito", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(l => l.CtaCredito)
            @Html.TextBoxFor(t => t.CtaCredito, new { @class = "form-control" })
            @Html.ValidationMessage("CtaCredito", new { @class = "text-danger" })
            <br />

            <div style="text-align: left">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg" />

                <input type="button" value="Volver Atras" class="btn btn-info btn-lg"
                       onclick="document.location.href='@Url.Content("~/TipDoc/TipDocQuery")'" />
            </div>



        }
    </div>
</div>
